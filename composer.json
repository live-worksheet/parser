{
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "name": "live-worksheet/parser",
    "description": "live worksheet material parser and linter",
    "authors": [
        {
            "name": "Moritz Vondano"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/console": "^5.1",
        "symfony/filesystem": "^5.1",
        "symfony/finder": "^5.1",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "psalm/plugin-phpunit": "^0.13.0",
        "psalm/plugin-symfony": "^2.0",
        "symplify/easy-coding-standard": "^8.3",
        "vimeo/psalm": "^4.1"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "LiveWorksheet\\Parser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LiveWorksheet\\Parser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "phive install",
            "@composer install"
        ],
        "cs": [
            "vendor/bin/ecs check src tests bin --fix --ansi"
        ],
        "tests": [
            "vendor/bin/phpunit"
        ],
        "psalm": [
            "vendor/bin/psalm"
        ],
        "build": [
            "@setup",
            "@cs",
            "@tests",
            "@psalm",
            "tools/box compile"
        ]
    }
}